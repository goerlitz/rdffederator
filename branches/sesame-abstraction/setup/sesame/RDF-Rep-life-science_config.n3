################################################################################
# Sesame configuration for the RDF federator.
#
# ATTENTION: the Sail implementing the sail:sailType must be published
#            in META-INF/services/org.openrdf.sail.SailFactory
################################################################################
@prefix void: <http://rdfs.org/ns/void#>.
@prefix rep:  <http://www.openrdf.org/config/repository#>.
@prefix sr:   <http://www.openrdf.org/config/repository/sail#>.
@prefix sail: <http://www.openrdf.org/config/sail#>.
@prefix fed:  <http://west.uni-koblenz.de/config/federation/sail#>.

[] a rep:Repository ;
   rep:repositoryTitle "RDF Federator" ;
   rep:repositoryID "RDFFederator" ;
   rep:repositoryImpl [
      rep:repositoryType "openrdf:SailRepository" ;
      sr:sailImpl [
         sail:sailType "west:FederationSail" ;

         # optimizer settings
         fed:optimizer "DYNAMIC_PROGRAMMING" ;
#         fed:optimizer "PATTERN_HEURISTIC" ;

         # cardinality estimator settings
         fed:estimator "STATISTICS" ;

         # sparql endpoints
         fed:member [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/dbpedia3.5.1_subset-void.n3> ;
            void:sparqlEndpoint <http://dbpedia.org/sparql>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/nytimes-2010-01-13-void.n3> ;
#            void:sparqlEndpoint <http://api.talis.com/stores/nytimes/services/sparql> ;
            void:sparqlEndpoint <http://localhost:8080/openrdf-sesame/repositories/nyt>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/linkedmdb-dump-2010-01-19-void.n3> ;
#            void:sparqlEndpoint <http://data.linkedmdb.org/sparql> ;
            void:sparqlEndpoint <http://localhost:8080/openrdf-sesame/repositories/lmdb>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/all-geonames-2010-11-28_cleaned-void.n3> ;
            void:sparqlEndpoint <http://geosparql.appspot.com/> ;
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/chebi-2010-11-26-void.n3> ;
#            void:sparqlEndpoint <http://chebi.bio2rdf.org/sparql>
            void:sparqlEndpoint <http://localhost:8080/openrdf-sesame/repositories/chebi>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/KEGG-2010-11-26-void.n3> ;
#            void:sparqlEndpoint <http://kegg.bio2rdf.org/sparql>
            void:sparqlEndpoint <http://localhost:8080/openrdf-sesame/repositories/kegg>
         ], [
            rep:repositoryType "west:VoidRepository" ;
            fed:voidDescription <void/drugbank_dump_cleaned-2010-11.26-void.n3> ;
#            void:sparqlEndpoint <http://www4.wiwiss.fu-berlin.de/drugbank/sparql> ;
            void:sparqlEndpoint <http://localhost:8080/openrdf-sesame/repositories/drugbank>
         ]
      ]
   ] .
